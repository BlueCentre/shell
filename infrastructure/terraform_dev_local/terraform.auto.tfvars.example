kubernetes_context = "kind-local-dev-cluster"
region             = "us-central1"

# Enable services
cert_manager_enabled     = true
external_secrets_enabled = true
external_dns_enabled     = false
opentelemetry_enabled    = true
datadog_enabled          = false
istio_enabled            = true
metallb_enabled          = true  # Enable for kind/minikube/bare-metal clusters to support LoadBalancer services
redis_enabled            = true
cnpg_enabled             = true
mongodb_enabled          = false
argocd_enabled           = false
telepresence_enabled     = false

# MetalLB configuration (required when metallb_enabled = true)
# IP range must be within your cluster's network range:
# - kind: Use Docker network range (docker network inspect kind | grep Subnet), typically 172.18.0.0/16
# - minikube: Use minikube's network range, typically 192.168.49.0/24
# - bare metal: Use any available IP range in your network
metallb_version  = "0.14.9"
metallb_ip_range = "172.18.255.200-172.18.255.250"  # Default for kind clusters

# Cloudflare API token
cloudflare_api_token = "REPLACE_WITH_CLOUDFLARE_API_TOKEN"

# Datadog API key
datadog_api_key = "REPLACE_WITH_DATADOG_API_KEY"

# Redis settings for rate limiting
redis_password = "REPLACE_WITH_REDIS_PASSWORD" # For demo/testing only - use a secure password in production

# MongoDB settings for application usage
mongodb_password = "REPLACE_WITH_MONGODB_PASSWORD" # For demo/testing only - use a secure password in production

# CNPG settings for application usage
cnpg_app_db_password = "REPLACE_WITH_CNPG_APP_DB_PASSWORD"
